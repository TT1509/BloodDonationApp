<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.MapsFragment">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/focusLocationButton"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="70dp"
        android:background="@null"
        android:contentDescription="Focus on Current Location"
        android:elevation="4dp"
        android:src="@drawable/ic_focus_location" />

    <ImageButton
        android:id="@+id/findRouteButton"
        android:layout_width="61dp"
        android:layout_height="64dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/box_background"
        android:contentDescription="Find Route"
        android:elevation="4dp"
        android:src="@drawable/ic_find_location" />

</FrameLayout>

